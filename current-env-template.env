# Current Environment Template
# Copy these settings when deploying to new platform

# Database (replace with your new database URL)
DATABASE_URL=postgresql://your-username:your-password@your-host:5432/your-database

# Server Configuration
NODE_ENV=production
PORT=5000

# Security (IMPORTANT: Generate a new random secret!)
SESSION_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_64_CHARACTERS_MINIMUM

# Bot Configuration
BOT_SLEEP_START=00:00
BOT_SLEEP_END=07:00
MAX_DAILY_VIDEOS=3

# Chrome/Browser Configuration
CHROME_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# Optional: If using custom domain
BASE_URL=https://your-domain.com

# Optional: Admin access (if implementing authentication)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password